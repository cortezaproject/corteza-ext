{
  "name": "corteza-ext-crm",
  "description": "Corteza Official CRM Extension",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "contributors": [
    "Toma≈æ Jerman <tomaz.jerman@crust.tech>"
  ],
  "private": false,
  "scripts": {
    "qa": "yarn lint; yarn test:unit",
    "lint": "eslint --ext .js,.ts {server-scripts,client-scripts}/**/*",
    "test:unit": "mocha",
    "test:unit:cc": "nyc mocha"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel": "^6.23.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "5.2.3",
    "esm": "^3.2.25",
    "flush-promises": "^1.0.2",
    "mocha": "^6.2.0",
    "mochapack": "^1.1.13",
    "nyc": "^14.1.1",
    "sinon": "^7.4.0",
    "source-map-support": "^0.5.16",
    "vue-loader": "^15.8.3",
    "webpack": "^4.41.5"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "per-file": true,
    "lines": 90,
    "functions": 90,
    "statements": 90,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "server-scripts/**/*.js",
      "client-scripts/**/*.js"
    ],
    "exclude": [
      "**/*.test.js"
    ]
  }
}
